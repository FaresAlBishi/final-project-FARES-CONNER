<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.id_page" android:id="@+id/frameLayout">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="your password" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/search"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="32dp"
                android:id="@+id/editTextBoxStart" android:textAlignment="center"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>
        <com.google.android.material.textfield.TextInputEditText
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/playerName" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/search"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="32dp"
                android:id="@+id/editTextBoxStart2" android:textAlignment="center"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.357"/>
        <Button
                android:text="Login"
                android:layout_width="102dp"
                android:layout_height="40dp"
                android:id="@+id/login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                android:layout_marginStart="136dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.109"/>
        <TextView
                android:text="Boiz Records"
                android:layout_width="377dp"
                android:layout_height="115dp"
                android:id="@+id/textView" android:textAlignment="center"
                android:textSize="60sp" android:fontFamily="@font/luckiest_guy" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
                android:src="@drawable/untitled89"
                android:layout_width="237dp"
                android:layout_height="311dp"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/textView"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/login"/>
        <TextView
                android:text="Search for The Boiz :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/login"
                app:layout_constraintVertical_bias="0.971" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>